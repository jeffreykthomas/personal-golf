<div class="min-h-screen bg-dark-bg flex flex-col items-center justify-center px-6">
  <div class="w-full max-w-sm">
    <!-- Logo -->
    <div class="golf-ball-orb w-24 h-24 mb-8">
      <div class="golf-ball-dimples"></div>
    </div>

    <h1 class="text-title text-center mb-8">Welcome Back</h1>

    <!-- Google Sign In -->
    <div class="mb-6">
      <%= link_to "/auth/google_oauth2", 
                    data: { turbo: false },
                    class: "w-full flex justify-center items-center px-4 py-3 border border-dark-border rounded-xl bg-white text-gray-900 text-sm font-medium hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-golf-green-500 transition-colors" do %>
        <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        Continue with Google
      <% end %>
    </div>

    <div class="flex items-center mb-6">
      <div class="flex-1 border-t border-dark-border"></div>
      <span class="px-4 text-gray-400 text-sm">Or continue with email</span>
      <div class="flex-1 border-t border-dark-border"></div>
    </div>

    <%= form_with url: session_path, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email_address, "Email", class: "block text-label mb-2" %>
        <%= f.email_field :email_address, 
            required: true,
            autofocus: true,
            placeholder: "your@email.com",
            class: "w-full bg-dark-surface border border-dark-border rounded-xl px-4 py-3 text-white placeholder-gray-500 focus-ring" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-label mb-2" %>
        <%= f.password_field :password, 
            required: true,
            placeholder: "••••••••",
            class: "w-full bg-dark-surface border border-dark-border rounded-xl px-4 py-3 text-white placeholder-gray-500 focus-ring" %>
      </div>

      <div class="flex items-center justify-between">
        <label class="flex items-center">
          <%= f.check_box :remember_me, class: "w-4 h-4 bg-dark-surface border-dark-border rounded text-golf-green-500 focus:ring-golf-green-500 focus:ring-offset-0" %>
          <span class="ml-2 text-caption">Remember me</span>
        </label>

        <%= link_to "Forgot password?", new_password_path, 
            class: "text-caption text-golf-green-500 hover:text-golf-green-400 transition-colors" %>
      </div>

      <%= f.submit "Sign In", 
          class: "w-full btn-primary cursor-pointer" %>
    <% end %>

    <div class="mt-8 text-center">
      <p class="text-caption">
        New to Personal Golf?
        <%= link_to "Create an account", new_user_path, 
            class: "text-golf-green-500 hover:text-golf-green-400 transition-colors font-medium" %>
      </p>
    </div>
  </div>
</div>