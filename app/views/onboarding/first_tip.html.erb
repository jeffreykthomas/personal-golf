<div class="min-h-screen bg-dark-bg px-6 py-12">
  <div class="max-w-md mx-auto">
    
    <div class="text-center mb-8">
      <h2 class="text-title mb-2">Here's your first tip!</h2>
      <p class="text-body">Based on your skill level, this should help immediately</p>
    </div>

    <!-- Personalized tip card -->
    <div class="bg-dark-card rounded-2xl p-6 border border-golf-green-500/30 mb-8"
         data-controller="tip-card"
         data-tip-card-tip-id-value="<%= @first_tip.id %>">

      
      <!-- AI Generated badge -->
      <% if @first_tip.ai_generated? %>
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-3 h-3 bg-accent-blue rounded-full animate-pulse"></div>
          <span class="text-caption">Personalized for you</span>
        </div>
      <% end %>

      <!-- Category indicator -->
      <div class="flex items-center justify-between mb-4">
        <span class="px-3 py-1 bg-dark-surface rounded-full text-caption">
          <%= @first_tip.category.name %>
        </span>
        <span class="text-caption">
          <%= @first_tip.phase.humanize %>
        </span>
      </div>

      <!-- Tip content -->
      <h3 class="text-heading mb-3"><%= @first_tip.title %></h3>
      <p class="text-body leading-relaxed mb-6"><%= simple_format(@first_tip.content) %></p>
      
      <!-- YouTube video thumbnail if available -->
      <% if @first_tip.has_youtube_video? %>
        <div class="mb-6">
          <a href="<%= @first_tip.youtube_url %>" target="_blank" rel="noopener noreferrer" class="block group">
            <div class="relative rounded-lg overflow-hidden bg-dark-surface">
              <img src="<%= @first_tip.youtube_thumbnail_url %>" 
                   alt="YouTube video thumbnail" 
                   class="w-full h-32 object-cover group-hover:scale-105 transition-transform duration-200"
                   onerror="this.style.display='none'">
              <div class="absolute inset-0 bg-black/30 flex items-center justify-center group-hover:bg-black/40 transition-colors">
                <div class="bg-red-600 rounded-full p-3 group-hover:scale-110 transition-transform">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
              </div>
              <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                Watch Video
              </div>
            </div>
          </a>
        </div>
      <% end %>

      <!-- Visual indicator of success -->
      <div class="bg-golf-green-500/10 border border-golf-green-500/20 rounded-xl p-4 mb-6">
        <p class="text-golf-green-500 text-sm">
          ðŸ’¡ Pro tip: Save this and try it at your next practice session or round!
        </p>
      </div>

      <!-- Quick action -->
      <%= form_with url: onboarding_save_first_tip_path, 
          local: false,
          data: { 
            controller: "save-tip",
            action: "submit->save-tip#save"
          } do |f| %>
        <%= f.hidden_field :tip_id, value: @first_tip.id %>
        
        <%= f.submit "Save This Tip & Continue", 
            class: "w-full btn-primary cursor-pointer mb-4",
            data: { save_tip_target: "button" } %>
      <% end %>

      <!-- Alternative action -->
      <%= link_to "Skip & Browse Tips", 
          tips_path,
          class: "block text-center text-gray-400 hover:text-white transition-colors text-sm",
          data: { turbo_method: :patch, turbo_action: "advance" } %>
    </div>

    <!-- Encouragement -->
    <div class="text-center fade-in" style="animation-delay: 0.4s;">
      <p class="text-caption mb-4">
        Great choice! You'll find this and other saved tips in your collection.
      </p>
      
      <div class="flex items-center justify-center space-x-2 text-golf-green-500">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
          <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 1 1 0 000 2H6a2 2 0 100 4h2a2 2 0 100-4h-.09A1.65 1.65 0 0010 4.65a1.65 1.65 0 00-.33-1.82A1.65 1.65 0 008 2a1.65 1.65 0 00-1.51 1H6a2 2 0 00-2 2v6a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2h-1.09A1.65 1.65 0 0012 4.65a1.65 1.65 0 01-.33-1.82A1.65 1.65 0 0110 2a1.65 1.65 0 01-1 .65zm1.5 5a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm7 0a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" clip-rule="evenodd"/>
          <path d="M5 18a1 1 0 01-1-1v-2a1 1 0 00-2 0v2a3 3 0 003 3h10a3 3 0 003-3v-2a1 1 0 10-2 0v2a1 1 0 01-1 1H5z"/>
        </svg>
        <span class="font-medium">Ready to improve your game?</span>
      </div>
    </div>

    <!-- Progress complete indicator -->
    <div class="flex justify-center space-x-2 mt-12">
      <div class="w-3 h-3 bg-golf-green-500 rounded-full"></div>
      <div class="w-3 h-3 bg-golf-green-500 rounded-full"></div>
      <div class="w-3 h-3 bg-golf-green-500 rounded-full"></div>
    </div>
  </div>
</div>