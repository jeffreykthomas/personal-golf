<div class="min-h-screen bg-dark-bg flex flex-col relative">
  <!-- Skip link -->
  <div class="absolute top-6 right-6">
    <%= link_to "Skip", root_path, class: "text-dark-text-muted text-lg" %>
  </div>

  <div class="flex-1 flex flex-col items-center justify-center px-6 py-12">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <h1 class="text-5xl font-light text-dark-text text-center mb-16">Golf</h1>

      <!-- Title -->
      <h2 class="text-3xl text-dark-text text-center mb-3">Let's create your account</h2>
      <p class="text-dark-text-muted text-center mb-10">Join 4,000,000+ players on their journey</p>

      <%= form_with model: @user, local: true, class: "space-y-4", data: { controller: "signup-form" } do |f| %>
        <% if @user.errors.any? %>
          <div class="bg-red-500/10 border border-red-500/20 rounded-2xl p-4 mb-4">
            <ul class="text-sm text-red-400 space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Email field -->
        <div>
          <%= f.email_field :email_address, 
              required: true,
              autofocus: true,
              placeholder: "alexsmith.mobbin+1@gmail.com",
              class: "w-full bg-transparent border border-dark-border rounded-full px-6 py-4 text-dark-text placeholder-dark-text-muted focus:outline-none focus:border-dark-text-muted text-lg" %>
        </div>

        <!-- Password field -->
        <div>
          <%= f.password_field :password, 
              required: true,
              placeholder: "Password",
              class: "w-full bg-transparent border border-dark-border rounded-full px-6 py-4 text-dark-text placeholder-dark-text-muted focus:outline-none focus:border-dark-text-muted text-lg" %>
        </div>

        <!-- Submit button -->
        <%= f.submit "Continue", 
            class: "w-full bg-dark-text text-dark-bg rounded-full py-4 font-medium text-lg cursor-pointer hover:opacity-90 transition-opacity relative",
            data: { "signup-form-target": "submit" } %>
      <% end %>

      <!-- Or divider -->
      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-dark-border"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-dark-bg text-dark-text-muted">or</span>
        </div>
      </div>

      <!-- Google sign up button -->
      <div class="space-y-3">
        <%= button_to "/auth/google_oauth2", 
                      method: :post, 
                      data: { turbo: false },
                      class: "w-full bg-white text-gray-900 rounded-full py-3 font-medium text-base flex items-center justify-center gap-3 hover:bg-gray-50 transition-colors" do %>
          <svg class="w-4 h-4" viewBox="0 0 24 24">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          Sign Up With Google
        <% end %>
      </div>

      <!-- Already have account -->
      <p class="text-center text-dark-text-muted mt-12">
        Already have an account?
      </p>
    </div>
  </div>
</div>