#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
  # One-time seed using sentinel in mounted storage
  SENTINEL="/rails/storage/.seeded"
  if [ ! -f "$SENTINEL" ]; then
    echo "Seeding database on first boot..."
    ./bin/rails db:seed || true
    touch "$SENTINEL"
  fi

  # One-time HoleImage import from bundled sample data
  IMAGES_SENTINEL="/rails/storage/.images_imported"
  if [ ! -f "$IMAGES_SENTINEL" ] && [ -f "/rails/db/sample_data/hole_images/manifest.yml" ]; then
    echo "Importing HoleImage media on first boot..."
    ./bin/rails data:import_hole_images["$IMPORT_OWNER_EMAIL","/rails/db/sample_data/hole_images"] || true
    touch "$IMAGES_SENTINEL"
  fi
fi

exec "${@}"
