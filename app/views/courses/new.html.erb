<div class="container mx-auto p-4 md:p-6 lg:p-8">
  <h2 class="text-heading mb-4">Add a Course</h2>

  <% if @course.errors.any? %>
    <div class="mb-4 p-4 rounded-lg bg-red-900/30 border border-red-700 text-red-200">
      <p class="font-semibold mb-2">Please fix the following:</p>
      <ul class="list-disc list-inside">
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @course, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm text-caption mb-1" %>
      <%= f.text_field :name, required: true, class: "w-full rounded-lg bg-dark-card border border-dark-border px-3 py-2 text-white" %>
    </div>

    <div>
      <%= f.label :location, "City, State (or address)", class: "block text-sm text-caption mb-1" %>
      <%= f.text_field :location, required: true, placeholder: "e.g., San Diego, CA", class: "w-full rounded-lg bg-dark-card border border-dark-border px-3 py-2 text-white" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm text-caption mb-1" %>
      <%= f.text_area :description, rows: 4, class: "w-full rounded-lg bg-dark-card border border-dark-border px-3 py-2 text-white" %>
    </div>

    <div>
      <label class="block text-sm text-caption mb-1">Number of holes</label>
      <%= select_tag "course[num_holes]",
            options_for_select([["9", 9], ["18", 18]], selected: 18),
            class: "w-full rounded-lg bg-dark-card border border-dark-border px-3 py-2 text-white" %>
      <p class="text-caption mt-1">Most courses have 18 holes.</p>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Create Course", class: "btn btn-primary" %>
      <%= link_to "Cancel", courses_path, class: "text-caption hover:text-white" %>
    </div>
  <% end %>
</div>


